@model WebMinerva.Models.Producto

@{
    ViewData["Title"] = "Detalle de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="latest-blog" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Detalle de Producto</h2>
            </div>
            <div class="post-grid d-flex flex-wrap justify-content-between">

                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Código</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Codigo)
                        </dd>
                        <dt class="col-sm-2">Descripción</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-2">Unidad de Medida</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UnidadMedida)
                        </dd>
                        <dt class="col-sm-2">Saldo</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Saldo)
                        </dd>
                        <dt class="col-sm-2">Precio de Venta</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrecioVenta)
                        </dd>
                        <dt class="col-sm-2">Usuario Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UsuarioRegistro)
                        </dd>
                        <dt class="col-sm-2">Fecha Registro</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2">Estado</dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                    <a asp-action="Index">Volver a la lista</a>
                </div>

            </div>
        </div>
    </div>
</section>
