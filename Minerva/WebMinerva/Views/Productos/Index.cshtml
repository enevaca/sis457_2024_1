@model IEnumerable<WebMinerva.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="latest-blog" class="padding-large">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Productos</h2>
            </div>
            <div class="post-grid d-flex flex-wrap justify-content-between">

                <p>
                    <a asp-action="Create" class="display-4">Crear Nuevo</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Unidad de Medida</th>
                            <th>Saldo</th>
                            <th>Precio de Venta</th>
                            <th>Usuario Registro</th>
                            <th>Fecha Registro</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnidadMedida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Saldo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrecioVenta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UsuarioRegistro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>